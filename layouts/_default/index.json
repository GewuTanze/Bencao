{{- $.Scratch.Add "index" slice -}}
{{- range site.RegularPages -}}
    {{- if and (not .Params.searchHidden) (ne .Layout `archives`) (ne .Layout `search`) (ne .Section `private`) }}
    {{- $.Scratch.Add "index" (dict 
        "title" .Title 
        "content" .Plain 
        "permalink" .Permalink 
        "summary" .Summary 
        "date" .Date.Unix 
        "categories" .Params.categories 
        "tags" .Params.tags 
        "author" .Params.author) -}}
    {{- end }}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}